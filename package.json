{
    "name": "alloy",
    "displayName": "Alloy",
    "description": "support for the Alloy modelling language",
    "version": "0.1.1",
    "publisher": "ArashSahebolamri",
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:alloy"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "alloy",
                "aliases": [
                    "Alloy",
                    "alloy"
                ],
                "extensions": [
                    ".als"
                ]
            }
        ],
        "commands": [
            {
                "command": "OpenAlloyEditor",
                "title": "Open Alloy Editor"
            },
            {
                "command": "ListAlloyCommands",
                "title": "List Alloy Commands"
            },
            {
                "command": "ExecuteAllAlloyCommands",
                "title": "Execute All Alloy Commands"
            }
        ]
    },
    "keywords": [
        "Alloy"
    ],
    "preview": true,
    "extensionDependencies": [
        "DongyuZhao.alloy-vscode"
    ],
    "author": {
        "name": "Arash Sahebolamri"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.18",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "vscode-languageclient": "^4.3.0"
    }
}
